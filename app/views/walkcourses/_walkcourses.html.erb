<% if walkcourses.any? %>
  <div class="walkcourse_partial">
    <ul class="list-unstyled">
      <% walkcourses.each do |walkcourse| %>
        <li class="media">
          <div class="media-body">
            <div class="usershow_course_image">
              <%= link_to image_tag(walkcourse.coursepic.url, size: '340x250'), walkcourse_path(walkcourse) %>
            </div>
            <div class="usershow_course_part">
              <div class="usershow_title">
                <%= walkcourse.title %>
              </div>
              <div class="usershow_description">
                <%= walkcourse.description %>
              </div>
            </div>
            <div class="user_show_button">
              <%= link_to "編集する", edit_walkcourse_path(walkcourse), class: 'btn btn-primary user_edit_button' %>
              <%= link_to "削除する", walkcourse_path(walkcourse), method: :delete, class: 'btn btn-primary user_destroy_button' %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="paginate_button">
      <%= paginate walkcourses %>
    </div>
  </div>
<% end %>
