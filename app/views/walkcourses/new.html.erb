<%= form_with(model: @walkcourse, local: true) do |f| %>
  <div class="course_form">
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="course_title_form">
      <div class="course_explanation">
        <a>コースタイトル</a>
      </div>
      <div class="title_transmit_form">
        <%= f.text_field :title, size: "62", class: 'form-control' %>
      </div>
    </div>
    <div class="course_image">
      <div class="course_image_explanation">
        <a>一覧表示で使用される<br>メイン画像を選択する</a>
      </div>
      <div class="course_image_button">
        <button type="button" class="btn btn-outline-secondary rounded-pill">
          <%= f.file_field :coursepic %>
        </button>
      </div>
    </div>

    <div class="course_description">
      <div class="course_description_explanation">
        <a>コースの説明を入力する</a>
      </div>
      <div class="description_transmit_form">
        <%= f.text_area :description, size: "5x10", class: 'form-control' %>
      </div>
    </div>

    <div class="first_spot">
      <div class="start_station_explanation">
        <a>スタート地点の駅名を<br>入力する</a>
      </div>
      <div class="start_station">
        <%= f.text_field :start_station, size: "40" %>　駅
      </div>
    </div>
    <!-- 移動時間 -->
    <div class="first_transittime">
      <div class="first_transittime_explanation">
        <a>次のスポットまでの<br>移動時間を入力する</a>
      </div>
      <div class="next_to_transititme">
        <%= f.text_field :time_to_first_spot, size: "40" %>　分
      </div>
    </div>
    <div class="save_button">
      <%= f.submit '保存する', class: 'btn btn-primary btn-block btn-lg' %>
    </div>
    <!-- spotの登録 -->
    <%= f.fields_for :spots do |spot_form| %>
      <div class="zero_spot">
        <div class="spot_name">
          <a>スポットの名称を入力する</a>
        </div>
        <div class="start_station">
          <%= spot_form.text_field :name, size: "40" %>　駅
        </div>
      </div>
      <!-- 移動時間 -->
      <div class="first_transittime">
        <div class="spot_timerequired_explanation">
          <a>この場所で所要する時間</a>
        </div>
        <div class="next_to_transititme">
          <%= spot_form.text_field :time_required, size: "40" %>　分
        </div>
      </div>
      <!-- spotイメージ -->
      <div class="spot_image">
        <div class="spot_image_explanation">
          <a>一覧表示で使用される<br>メイン画像を選択する</a>
        </div>

        <div class="spot_image_button">
          <button type="button" class="btn btn-outline-secondary rounded-pill">
            <%= spot_form.file_field :spotpic %>
         </button>
        </div>
      </div>
      <div class="save_button">
        <%= f.submit '保存する', class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    <% end %>

    <div class="zero_spot">
      <div class="start_station_explanation">
        <a> ゴール地点の駅名を<br>入力する</a>
      </div>
      <div class="start_station">
        <%= f.text_field :goal_station, size: "40" %>　駅
      </div>
    </div>

    <!-- 保存ボタン -->
    <div class="save_button">
      <%= f.submit '保存する', class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  </div>
<% end %>
